<h1>Все посты</h1>
<% @post.reverse.each do |post| %>
	<div class="card">
		<h5 class="card-header"><%= post.title %></h5>
		<div class="card-body">
			<% post_preview = post.body[0..40] %>
			<% if post.body.length > 40 %>
				<% post_preview << "..." %>
			<% end %>
			<p class="card-text"><%= post_preview %></p>
			<%= link_to "Читать далее", post_path(post), :class => 'btn btn-primary' %>
		</div>
	</div>
	<br>
<% end %>